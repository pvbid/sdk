{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es5", "es2015", "es2017", "es6", "dom"]
  }
}
